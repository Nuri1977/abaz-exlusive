{
  "project": {
    "name": "Molini Shoes",
    "description": "E-commerce web application built with Next.js 15.2.3 and TypeScript",
    "techStack": {
      "frontend": [
        "Next.js 15.2.3",
        "TypeScript",
        "React 18.3.1",
        "Tailwind CSS",
        "shadcn/ui"
      ],
      "backend": [
        "Next.js API Routes",
        "Prisma ORM"
      ],
      "database": [
        "PostgreSQL (Neon.tech)"
      ],
      "authentication": [
        "Better Auth"
      ],
      "fileUpload": [
        "UploadThing v7"
      ],
      "stateManagement": [
        "TanStack Query"
      ]
    }
  },
  "conventions": {
    "codeStyle": {
      "typescript": {
        "strict": true,
        "noAny": true,
        "optionalChaining": true
      },
      "react": {
        "clientComponents": "_components/",
        "noClientDirectiveOnPages": true,
        "useLinkComponent": true
      },
      "styling": {
        "framework": "Tailwind CSS",
        "utility": "cn() from @/lib/utils.ts",
        "preferShadcn": true
      }
    },
    "database": {
      "includeAllFields": true,
      "noPlaceholders": true,
      "errorHandling": true
    },
    "api": {
      "errorHandling": true,
      "loadingStates": true,
      "optimisticUpdates": true
    }
  },
  "features": {
    "authentication": {
      "server": "src/lib/auth.ts",
      "client": "src/lib/auth-client.ts",
      "hooks": [
        "useSession"
      ],
      "session": "auth.api.getSession"
    },
    "fileUpload": {
      "router": "src/app/api/uploadthing/core.ts",
      "components": "@/utils/uploadthing",
      "customButton": "src/components/shared/CustomUploadButton.tsx",
      "serverApi": "utapi",
      "callbacks": [
        "onClientUploadComplete",
        "onUploadError"
      ]
    },
    "ecommerce": [
      "Product listings with images",
      "Shopping cart with React Context",
      "Secure payment processing",
      "Size guides and measurements",
      "Inventory management",
      "Wishlist functionality",
      "Product reviews and ratings",
      "Search and filtering",
      "Order tracking",
      "Email notifications",
      "Responsive design",
      "Social media integration",
      "SEO optimization",
      "Analytics tracking",
      "Multi-language support",
      "Return/exchange policy",
      "Loyalty program",
      "Related products",
      "Newsletter subscription",
      "Contact form"
    ]
  },
  "requirements": {
    "nodeVersion": ">=18.18.0",
    "port": 3000,
    "typeSafety": true,
    "errorHandling": true,
    "loadingStates": true,
    "optimisticUpdates": true
  }
}